<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray"
    android:orientation="vertical"
    tools:context=".hakkimda"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:layout_gravity="bottom">


            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"

                android:layout_height="108dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/custom_edittext"
                android:text="Uygulamanın amacı afet sonrası kayıp olan yakınlarınızı bulmayı amaçlayan bir yüz tanıma sistemidir "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/loginText2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="Detaylı bilgi için websitemizi ziyaret edebilirsiniz.Findquake.com.tr"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tagLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:layout_marginBottom="50dp"

                android:text="Mehmet Goztas"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:fontFamily="cursive" />




        </RelativeLayout>
    </LinearLayout>
</LinearLayout>